{
  "name": "@ambi-robotics/winston-cloudwatch",
  "version": "1.0.1",
  "description": "Send logs to Amazon Cloudwatch using Winston.",
  "keywords": [
    "amazon",
    "cloudwatch",
    "winston",
    "logging",
    "log"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "lib/",
    "typescript/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip": "knip --cache",
    "lint": "eslint --cache .",
    "lint:fix": "eslint . --fix",
    "pack:local": "npm pack",
    "pack:test": "echo 'To test: npm install <path-to-tgz-file>' && npm pack",
    "prepare": "husky",
    "test": "nyc --reporter=text --reporter=lcov mocha test --recursive -R dot",
    "test:watch": "./node_modules/.bin/mocha test --recursive -w"
  },
  "repository": "https://github.com/ambi-robotics/winston-cloudwatch",
  "author": "me@lazywithclass.com",
  "contributors": [
    {
      "name": "Mike Gray",
      "email": "mike.gray@ambirobotics.com"
    }
  ],
  "license": "MIT",
  "typings": "typescript/winston-cloudwatch.d.ts",
  "peerDependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.922.0",
    "winston": "^3.17.0"
  },
  "dependencies": {
    "safe-stable-stringify": "^2.5.0"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.922.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@types/node": "24.10.0",
    "@types/winston": "2.4.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "knip": "^5.66.3",
    "lint-staged": "^16.2.6",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "rewiremock": "^3.14.6",
    "semantic-release": "^24.2.9",
    "sinon": "^21.0.0"
  },
  "lint-staged": {
    "**/*.{ts,js,json,md,yaml,yml}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=22.17.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
